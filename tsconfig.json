{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "browser",
    "config",
    "dist",
    "scripts",
    "coverage",
    "acceptance-tests",
    "webpack",
    "jest",
    "coverage",
    "**.config.js",
    "**/*.spec.ts*"
  ]
}
