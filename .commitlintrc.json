{
  "rules": {
    "header-max-length": [
      1,
      "always",
      100
    ],
    "subject-empty": [
      1,
      "never"
    ],
    "subject-full-stop": [
      1,
      "never",
      "."
    ],
    "type-case": [
      1,
      "always",
      "lower-case"
    ],
    "type-empty": [
      1,
      "never"
    ],
    "type-enum": [
      1,
      "always",
      [
        "breaking",
        "chore",
        "ci",
        "config",
        "docs",
        "feat",
        "fix",
        "norelease",
        "refactor",
        "style",
        "test"
      ]
    ]
  }
}
